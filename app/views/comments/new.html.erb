  <div class="row">
    <div class="panel panel-default">
	  
	  <div class="panel-heading">
	    <h2>Comment here:</h2>
	  </div>

	  <div class="panel-body">
		<%= form_for :comment, url: '/comments', :html => { multipart: true } do |f| %>
