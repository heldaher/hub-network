
<%= render 'shared/errors' %>

<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <div class="panel panel-default">
	  
	  <div class="panel-heading">
	    <h2>Post here:</h2>
	  </div>

	  <div class="panel-body">
		<%= form_for :post, url: '/posts', :html => { multipart: true } do |f| %>
		<%= f.text_area :body, placeholder: 'post', :class => 'new-post-box' %><br><br>
		<em>optional file upload (only images can be uploaded)</em>
		<%= f.file_field :image %><br>
	    <%= f.submit "Submit" %>
		<% end %>
	  </div>

	</div>
  </div>
</div>

