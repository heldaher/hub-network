
<%= render 'shared/errors' %>

<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <div class="panel panel-default">

      <div class="panel-heading">
		<h3>Create Group:</h3>
	  </div>

	  <div class="panel-body">
		<%= form_for :group, url: '/groups', :html => {:class => 'new-group-form' } do |f| %>
			<%= f.text_field :name, placeholder: 'group name', :class => 'new-group-box' %><br><br>
		<%= f.submit "Submit" %>
		<% end %>
	  </div>

	</div>
  </div>
</div>