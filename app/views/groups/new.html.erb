<%= render 'shared/errors' %>

<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <div class="panel panel-default">

      <div class="panel-heading">
		<h3>Create Group:</h3>
	  </div>

	  <div class="panel-body">
		<%= form_for :group, url: '/groups', :html => {:class => 'new-group-form' } do |f| %>
		  <span><b>Group Name</b></span><br>
		  <%= f.text_field :name, placeholder: 'group name', :class => 'new-group-box' %><br><br>

		  <span><b>Group Members</b></span><br>
		  <%= select_tag "users[]", options_for_select(@users.collect{|x| [x.username,x.id]}), {:multiple => :multiple, :size => 10} %><br><br>

		<%= f.submit "Submit" %>
		<% end %>
	  </div>

	</div>
  </div>
</div>